<Page
    x:Class="CoreMon.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoreMon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <ListView ItemsSource="{x:Bind CoresList, Mode=OneWay}" SelectionMode="None">
            
            <ListView.Header>
                <StackPanel Margin="20,20,20,10">
                    <TextBlock Text="CPU Cores Monitor" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="{x:Bind CpuDetails}" 
                               FontSize="14" 
                               FontFamily="Consolas, Segoe UI"
                               TextWrapping="Wrap" 
                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Refresh Interval:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock x:Name="RefreshRateText" Text="1000 ms (1.0 s)" VerticalAlignment="Center" Width="120" Margin="0,0,10,0"/>
                        <Slider x:Name="RefreshRateSlider"
                                Minimum="200"
                                Maximum="5000"
                                StepFrequency="100"
                                Value="1000"
                                Width="300"
                                ValueChanged="OnRefreshSliderValueChanged"/>
                    </StackPanel>
                </StackPanel>
            </ListView.Header>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:CoreInfo">
                    <Grid Margin="10,5,10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{x:Bind CoreName}" VerticalAlignment="Center"/>

                        <ProgressBar Grid.Column="1" 
                                     Maximum="{x:Bind MaxFrequency}" 
                                     Value="{x:Bind CurrentFrequency, Mode=OneWay}" 
                                     Height="10" Margin="5,0" VerticalAlignment="Center" Foreground="#0078D7"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind FrequencyText, Mode=OneWay}" 
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"/>

                        <ProgressBar Grid.Column="3" 
                                     Maximum="100" 
                                     Value="{x:Bind UsagePercent, Mode=OneWay}" 
                                     Height="10" Margin="10,0" VerticalAlignment="Center" Foreground="#E04F5F"/>
                        <TextBlock Grid.Column="4" Text="{x:Bind UsageText, Mode=OneWay}" 
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
